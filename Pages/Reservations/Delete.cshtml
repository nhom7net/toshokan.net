@page
@model toshokan.Pages.Reservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.ReservationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.ReservationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.ExpirationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Reservation.ExpirationDate < DateTime.Now)
            {
                @:Expired
            }
            else
            {
                @:Pending
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Book.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Member)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Member.MemberID)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Reservation.ReservationID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
