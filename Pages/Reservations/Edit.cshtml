@page
@model toshokan.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ReservationID" />
            <div class="form-group">
                <label asp-for="SelectedBook" class="control-label"></label>
                <select asp-for="SelectedBook" class="form-control" asp-items="@Model.BookList">
                    <option value="">-- Select a Book --</option>
                </select>
                <span asp-validation-for="SelectedBook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedMember" class="control-label"></label>
                <select asp-for="SelectedMember" class="form-control" asp-items="@Model.MemberList">
                    <option value="">-- Select member --</option>
                </select>
                <span asp-validation-for="SelectedMember" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ReservationDate" class="control-label"></label>
                <input asp-for="Reservation.ReservationDate" class="form-control" />
                <span asp-validation-for="Reservation.ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ExpirationDate" class="control-label"></label>
                <input asp-for="Reservation.ExpirationDate" class="form-control" />
                <span asp-validation-for="Reservation.ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
