@page
@model toshokan.Pages.Accounts.EditInfoModel

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex flex-column justify-content-center align-items-center">
    <h1>Edit your information</h1>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.MemberID" />
            <div class="form-group">
                <label asp-for="Member.FirstName" class="control-label"></label>
                <input asp-for="Member.FirstName" class="form-control" />
                <span asp-validation-for="Member.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.LastName" class="control-label"></label>
                <input asp-for="Member.LastName" class="form-control" />
                <span asp-validation-for="Member.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.MembershipDate" class="control-label"></label>
                <input asp-for="Member.MembershipDate" class="form-control" />
                <span asp-validation-for="Member.MembershipDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Address" class="control-label"></label>
                <input asp-for="Member.Address" class="form-control" />
                <span asp-validation-for="Member.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.PhoneNumber" class="control-label"></label>
                <input asp-for="Member.PhoneNumber" class="form-control" />
                <span asp-validation-for="Member.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="Member.Username" class="control-label">Username</label>
                <input asp-for="Member.Username" class="form-control"/>
                <span asp-validation-for="Member.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Password" class="control-label">New Password</label>
                <input asp-for="Member.Password" class="form-control"/>
                <span asp-validation-for="Member.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
