@page
@model toshokan.Pages.Accounts.AdminLoginModel
@{
}
<h2>Login for Admin</h2>
@if (!ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var modelState in ViewData.ModelState.Values)
        {
            foreach (var error in modelState.Errors)
            {
                <p>@error.ErrorMessage</p>
            }
        }
    </div>
}

<div class="col-md-4">
<form method="post">
     <div class="form-group">
        <label asp-for="Librarians.Username" class="control-label"></label>
        <input asp-for="Librarians.Username" class="form-control" />
        <span asp-validation-for="Librarians.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Librarians.Password" class="control-label"></label>
            <input type="password" asp-for="Librarians.Password" class="form-control" />
        <span asp-validation-for="Librarians.Password" class="text-danger"></span>
    </div>
    <div class="form-group login-container">
        <button type="submit" class="btn btn-primary">Login</button>
    </div> 
</form>
</div>
