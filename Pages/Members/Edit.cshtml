@page
@model toshokan.Pages.Members.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.MemberID" />

            <div class="form-group">
                <label asp-for="Member.FirstName" class="control-label"></label>
                <input asp-for="Member.FirstName" class="form-control" required minlength="2" maxlength="50" />
                <span asp-validation-for="Member.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.LastName" class="control-label"></label>
                <input asp-for="Member.LastName" class="form-control" required minlength="2" maxlength="50" />
                <span asp-validation-for="Member.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.MembershipDate" class="control-label"></label>
                <input asp-for="Member.MembershipDate" class="form-control" type="date" required />
                <span asp-validation-for="Member.MembershipDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.Address" class="control-label"></label>
                <input asp-for="Member.Address" class="form-control" required />
                <span asp-validation-for="Member.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.PhoneNumber" class="control-label"></label>
                <input asp-for="Member.PhoneNumber" class="form-control" required pattern="[0-9]{10,}" title="Please enter a valid phone number (at least 10 digits)" />
                <span asp-validation-for="Member.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" type="email" required />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
