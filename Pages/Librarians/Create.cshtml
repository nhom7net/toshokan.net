@page
@model toshokan.Pages.Librarians.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Librarian</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Librarian.FirstName" class="control-label"></label>
                <input asp-for="Librarian.FirstName" class="form-control" placeholder="Enter first name" required minlength="2" maxlength="50" />
                <span asp-validation-for="Librarian.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Librarian.LastName" class="control-label"></label>
                <input asp-for="Librarian.LastName" class="form-control" placeholder="Enter last name" required minlength="2" maxlength="50" />
                <span asp-validation-for="Librarian.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Librarian.EmploymentDate" class="control-label"></label>
                <input asp-for="Librarian.EmploymentDate" class="form-control" placeholder="Enter employment date" required type="date" />
                <span asp-validation-for="Librarian.EmploymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Librarian.PhoneNumber" class="control-label"></label>
                <input asp-for="Librarian.PhoneNumber" class="form-control" placeholder="Enter phone number" required pattern="\d{10}" />
                <span asp-validation-for="Librarian.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Librarian.Email" class="control-label"></label>
                <input asp-for="Librarian.Email" class="form-control" placeholder="Enter email" required type="email" />
                <span asp-validation-for="Librarian.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
