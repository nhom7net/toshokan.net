@page
@model toshokan.Pages.Librarians.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Librarians</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<form method="get">
    <div class="form-group row">
        <div class="col-md-3">
            <input type="text" name="searchString" value="@Model.SearchString" class="form-control mb-2" placeholder="Search...">
        </div>
        <div class="col-md-3">
            <select name="searchType" class="form-control mb-2">
                <option value="FirstName" selected>First Name</option>
                <option value="LastName">Last Name</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Librarian[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Librarian[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Librarian[0].EmploymentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Librarian[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Librarian[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Librarian)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmploymentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-page="./Edit" asp-route-id="@item.LibrarianID">Edit</a>
                    <a class="btn btn-outline-secondary" asp-page="./Details" asp-route-id="@item.LibrarianID">Details</a>
                    <a class="btn btn-outline-warning" asp-page="./Delete" asp-route-id="@item.LibrarianID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>